{
  "name": "docker-node-ts",
  "version": "1.0.0",
  "scripts": {
     "dev": "nodemon --watch src --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js"
  },
  "devDependencies": {
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0",
    "@types/node": "^18.0.0",
    "nodemon": "^2.0.15"  
  },
  "watch": ["src"],
  "ext": "ts,json",
  "exec": "ts-node src/index.ts"
}
